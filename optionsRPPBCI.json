{
    "form": {
        "attributes": {
            "action": "rppbci.php",
            "method": "post"
        },
        "buttons": {
            "submit": {
                "title": "Atualizar registro no RPPBCI"
            },                               
            "reset": {}
        }
    },
    "fields": {
        "helper": "",
        "name": {
            "size": 1000
        },
        "country": {
            "label": "País de publicação",
            "optionLabels": ["Brasil", "Estados Unidos da América","Argentina","Canadá"],
            "sort": false
        },
        "datePublished": {
            "type": "date",
            "picker": {
                "format": "YYYY"
            },
            "manualEntry": false
        },
        "description": {
            "type":"array",
            "items": {
                "type": "textarea"
            }
        }
    }                       
}