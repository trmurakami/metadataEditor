{
    "title": "Dados da obra",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "title": "Título",
            "required": true
        },
        "subtitle": {
            "type": "string",
            "title": "Subtítulo",
            "required": false
        },
        "author": {
            "title": "Autores",
            "type": "array",
            "items": {
                "title": "Autor",
                "type": "object",
                "properties":{                    
                    "person":{
                        "type":"object",
                        "properties":{
                            "name":{
                                "type": "string",
                                "title": "Nome do autor"
                            }
                        }
                    },
                    "organization":{
                        "type":"object",
                        "properties":{
                            "name":{
                                "type": "string",
                                "title": "Instituição"
                            }
                        }
                    }                    
                }
            }                                 
        },
        "doi": {
            "type": "string",
            "title": "DOI",
            "pattern": "^10.*",
            "required": false
        },
        "country": {
            "title": "País de publicação",
            "type": "select",
            "enum": ["bl","xxu","ag","-cn"]
        }     
    }
}