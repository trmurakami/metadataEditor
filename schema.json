{
    "title": "Dados da obra",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "title": "Título",
            "required": true
        },
        "subtitle": {
            "type": "string",
            "title": "Subtítulo",
            "required": false
        },
        "author": {
            "title": "Autores",
            "type": "array",
            "items": {
                "title": "Autor",
                "type": "object",
                "properties":{                    
                    "person":{
                        "type":"object",
                        "properties":{
                            "name":{
                                "type": "string",
                                "title": "Nome do autor"
                            },
                            "identifier": {
                                "title": "Identificador",
                                "type":"object",
                                "properties":{
                                    "institution": {
                                        "type": "string",
                                        "title": "Entidade de atribuição",
                                        "enum": ["ORCID", "Lattes", "LC", "VIAF"]
                                    },
                                    "value":{
                                        "title": "Identificador",
                                        "type": "string"
                                    }
                                }
                            }

                        }
                    },
                    "organization":{
                        "type":"object",
                        "properties":{
                            "name":{
                                "type": "string",
                                "title": "Instituição"
                            }
                        }
                    }                    
                }
            }                                 
        },
        "doi": {
            "type": "string",
            "title": "DOI",
            "pattern": "^10.*",
            "required": false
        },
        "isPartOf": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "title": "Título do periódico"
                }
            }
        },
        "country": {
            "title": "País de publicação",
            "type": "select",
            "enum": ["bl","xxu","ag","-cn"]
        }     
    }
}